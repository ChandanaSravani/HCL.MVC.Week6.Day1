@model HCL.MVC.Week6.Day1.Models.CustomerC
@{
    ViewBag.Title = "EditCustomer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>EditCustomer</h2>
<div class="container">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        var BirthDate = Model.DOB.HasValue ? Model.DOB.Value.ToShortDateString() : "No Date";
        <div class="form-group">
             
            @Html.LabelFor(c => c.CustomerName)
            @Html.TextBoxFor(c => c.CustomerName, new { @class = "form-control", autocomplete = "off" })
            @Html.ValidationMessageFor(c => c.CustomerName@*,null,new { @class = "text-danger" }//for applying color individually*@)
        </div>
        <div class="form-group">
            @Html.LabelFor(c => c.City)
            @Html.TextBoxFor(c => c.City, new { @class = "form-control" })
            @Html.ValidationMessageFor(c => c.City)
        </div>
        <div class="form-group">
            @Html.LabelFor(c => c.DOB)
            @Html.TextBox("BirthDate",BirthDate,new { @class="form-control"})
            @*@Html.TextBoxFor(c => c.DOB, new { @class = "form-control"})*@
            @Html.ValidationMessageFor(c => c.DOB)
        </div>
        <div class="form-group">
            <label>Gender</label>
            @Html.DropDownListFor(c => c.Gender, ViewBag.Gender as SelectList, new { @class = "form-control" })
            @*@Html.TextBoxFor(c=>c.Gender,new { @class="form-control"})*@
            @*@Html.DropDownList("Gender", null, new { @class="form-control"})*@
            @Html.ValidationMessageFor(c => c.Gender)
            @*<input type="radio" id="rbMale" name="gender" />Male
                <input type="radio" id="rbFemale" name="gender" />Female
                <input type="radio" id="rbOthers" name="gender" />Others*@
        </div>
        <div class="form-group">
            @Html.LabelFor(c => c.MembershipType)
            @Html.DropDownListFor(c => c.MembershipTypeId, ViewBag.MembershipTypeId as SelectList, new { @class = "form-control" })
            @Html.ValidationMessageFor(c => c.MembershipTypeId)
            @*@Html.DropDownList("MembershipTypeId", null, new { @class="form-control"})*@
        </div>
        <div class="form-group">
            <input type="submit" value="Submit" id="btnSubmit" class="btn btn-outline-primary" />
        </div>
    }
</div>
