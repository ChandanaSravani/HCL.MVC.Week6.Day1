<h3>@Html.ActionLink("New Movie","Create","Movies")</h3>
<table class="table table-bordered table-hover alert">
    <tr>
        <th>Movie Id</th>
        <th>Movie Name</th>
        <th>Genre Type</th>
    </tr>
    @foreach (var s in Model)
    {
        <tr>
            <td>@s.Id</td>
            <td >
                @Html.ActionLink(s.Name, "SpecificDetails", "Movies", new { Id = s.Id }, new { @class = "btn btn-link" })
            </td>
            <td>@s.GenreType.GName</td>
        </tr>
    }

</table>
